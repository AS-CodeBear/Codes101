#include<stdio.h>

int main()
{
    int max=0;
    int arr[10];
    for(int i=0;i<10;i++){
    scanf("%d",&arr[i]);
    }
    int sum1,sum2,sum3,sum4,sum5,sum6,sum7,sum8,sum9,sum10,ii,ie;
    sum1=0;
    sum2=0;
    sum3=0;
    sum4=0;
    sum5=0;
    sum6=0;
    sum7=0;
    sum8=0;
    sum9=0;
    sum10=0;
    for(int i=0;i<10;i++){
        sum1+=arr[i];
        if(sum1>max){
            max=sum1;
            ii=1;
            ie=i+1;
        }
    }
    for(int i=1;i<10;i++){
        sum2+=arr[i];
        if(sum2>max){
            max=sum2;
            ii=2;
            ie=i+1;
        }
    }
    for(int i=2;i<10;i++){
        sum3+=arr[i];
        if(sum3>max){
            max=sum3;
            ii=3;
            ie=i+1;
        }
    }
    for(int i=3;i<10;i++){
        sum4+=arr[i];
        if(sum4>max){
            max=sum4;
            ii=4;
            ie=i+1;
        }
    }
    for(int i=4;i<10;i++){
        sum5+=arr[i];
        if(sum5>max){
            max=sum5;
            ii=5;
            ie=i+1;
        }
    }
    for(int i=5;i<10;i++){
        sum6+=arr[i];
        if(sum6>max){
            max=sum6;
            ii=6;
            ie=i+1;
        }
    }
    for(int i=6;i<10;i++){
        sum7+=arr[i];
        if(sum7>max){
            max=sum7;
            ii=7;
            ie=i+1;
        }
    }
    for(int i=7;i<10;i++){
        sum8+=arr[i];
        if(sum8>max){
            max=sum8;
            ii=8;
            ie=i+1;
        }
    }
    for(int i=8;i<10;i++){
        sum9+=arr[i];
        if(sum9>max){
            max=sum9;
            ii=9;
            ie=i+1;
        }
    }
    for(int i=9;i<10;i++){
        sum10+=arr[i];
        if(sum10>max){
            max=sum10;
            ii=10;
            ie=i+1;
        }
    }
    printf("%d %d %d",max,ii,ie);
    return 0;
}
