#include<stdio.h>


int main()
{
    int opcode;
    scanf("%d\n",&opcode);
    if (opcode==1){
        float n1,n2;
        scanf("%f %f",&n1,&n2);
        printf("%0.3f",(n1+n2)/2);
    }
    else if (opcode==2){
        float n3,n4;
        scanf("%f %f",&n3,&n4);
           if (n3>=n4){
               printf("%0.3f",n3-n4);
           }
           else {printf("%0.3f",n4-n3); 
           }
           }
    else if (opcode==3){
        float n5;
        scanf("%f",&n5);
        printf("%0.3f",(n5+1));
    }
    else if (opcode==4){
        float n6;
        scanf("%f",&n6);
        printf("%0.3f",(n6*n6));
    }
    else {
        printf("Operation not supported!");
    }
    
    //  Insert your code here.
    
    return 0;
}
