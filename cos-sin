#include<stdio.h>
#include<math.h>
int main()
{
    float x,tanx,sinx,cosx;
    scanf("%f",&x);
    cosx=1-(pow(x,2)/2)+(pow(x,4)/24)-(pow(x,6)/720);
    sinx=x-(pow(x,3)/6)+(pow(x,5)/120)-(pow(x,7)/5040);
    tanx=(sinx/cosx);
    printf("%0.2f",tanx);
    
    
    // cos ,sin expansion
    
    return 0;
}
